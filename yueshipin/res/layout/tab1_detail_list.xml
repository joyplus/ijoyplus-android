<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="144dp"
    android:padding="5.0dip">

    <ImageView
        android:id="@+id/video_preview_bg"
        android:layout_width="92dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dip"
        android:scaleType="centerInside"
        android:src="@drawable/tab1_moviecard"/>

    <ImageView
        android:id="@+id/video_preview_img"
        android:layout_width="74dp"
        android:layout_height="111dp"
        android:layout_alignLeft="@id/video_preview_bg"
        android:layout_alignTop="@id/video_preview_bg"
        android:layout_marginLeft="9dip"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_video_caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/video_preview_bg"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/thisnext"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="444444"
        android:textColor="#444444"
        android:textSize="18dip"/>

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_video_caption"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="20dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip"/>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_1"
        android:layout_below="@id/txt_1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip"/>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip"/>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_video_caption"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip"/>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip"/>

    <ImageView
        android:id="@+id/thisnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/video_preview_bg"
        android:layout_marginRight="3dp"
        android:layout_marginTop="22dp"
        android:scaleType="center"
        android:src="@drawable/tab1_seriesflag"/>

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_below="@+id/TextView04"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="    • • •  • • • "
        android:textColor="#9f9f9f"
        android:textSize="13dip"/>

</RelativeLayout>