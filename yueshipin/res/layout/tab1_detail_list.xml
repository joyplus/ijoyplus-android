<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="144dp"
    android:paddingLeft="4.0dip"
    android:paddingTop="4.0dip"
    android:paddingBottom="4.0dip"
    android:paddingRight="7dip" >
	<!-- android:padding="4.0dip" -->
    <ImageView
        android:id="@+id/video_preview_bg"
        android:layout_width="92dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dip"
        android:scaleType="centerInside"
        android:src="@drawable/tab1_moviecard" />

    <ImageView
        android:id="@+id/video_preview_img"
        android:layout_width="74dp"
        android:layout_height="111dp"
        android:layout_alignLeft="@id/video_preview_bg"
        android:layout_alignTop="@id/video_preview_bg"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txt_video_caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/video_preview_bg"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/thisnext"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="444444"
        android:textColor="#444444"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_video_caption"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_1"
        android:layout_below="@id/txt_1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_video_caption"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="9f9f9f"
        android:textColor="#9f9f9f"
        android:textSize="13dip" />

    <ImageView
        android:id="@+id/thisnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/video_preview_bg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="center"
        android:src="@drawable/tab1_seriesflag" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_alignRight="@+id/thisnext"
        android:layout_below="@+id/TextView04"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="    • • •  • • • "
        android:textColor="#9f9f9f"
        android:textSize="13dip" />

</RelativeLayout>