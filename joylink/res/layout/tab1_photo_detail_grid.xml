<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/video_preview_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tab1_photo_item_bg" />

    <ImageView
        android:id="@+id/video_preview_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@id/video_preview_bg"
        android:layout_alignTop="@id/video_preview_bg"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_video_caption"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/video_preview_img"
        android:layout_below="@+id/video_preview_bg"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="4444445555555555555"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>