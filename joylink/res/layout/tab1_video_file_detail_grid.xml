<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/video_preview_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tab1_photo_file_item_bg" />

    <ImageView
        android:id="@+id/video_preview_img"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_alignLeft="@+id/video_preview_bg"
        android:layout_alignTop="@+id/video_preview_bg"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/video_preview_img"
        android:layout_alignLeft="@+id/video_preview_img"
        android:layout_alignRight="@+id/video_preview_img"
        android:background="@drawable/tab2_video_thumbnail_time_bg" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:text="00:00:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>